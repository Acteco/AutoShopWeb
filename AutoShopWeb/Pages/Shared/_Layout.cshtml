<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">AutoShop</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" href="/Cars">Автомобили</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Services">Услуги</a></li>

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Client"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Client/MyContracts">Мои договоры</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Client/MyPayments">Мои оплаты</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Client/Profile">Профиль</a></li>
                        }

                        @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Employee") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Employee/Dashboard">Панель сотрудника</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Employee/Contracts">Договоры</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Employee/Cars">Авто (CRUD)</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Employee/Services">Услуги (CRUD)</a></li>


                        }

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/Users">Пользователи</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/CreateEmployeeUser">Создать сотрудника</a></li>

                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">👤 @User.Identity!.Name</span>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="/Account/Logout">Выйти</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Account/Login">Войти</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
