@page
@model AutoShopWeb.Pages.Employee.Services.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Employee,Admin")]
@{
    ViewData["Title"] = "Редактирование услуги";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Редактирование услуги</h2>
    <a class="btn btn-outline-secondary" href="/Employee/Services">К списку</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Service == null)
{
    <div class="alert alert-warning">Услуга не найдена.</div>
}
else
{
    <form method="post" class="card shadow-sm">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Название</label>
                <input class="form-control" asp-for="ServiceType" />
            </div>

            <div class="mb-3">
                <label class="form-label">Стоимость</label>
                <input class="form-control" asp-for="Cost" type="number" step="0.01" />
            </div>

            <button class="btn btn-primary">Сохранить</button>
        </div>
    </form>
}
