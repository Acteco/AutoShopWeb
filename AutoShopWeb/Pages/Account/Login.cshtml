@page
@model AutoShopWeb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="mb-3">Вход</h3>

                @if (!string.IsNullOrWhiteSpace(Model.Error))
                {
                    <div class="alert alert-danger">@Model.Error</div>
                }

                <form method="post" class="mt-3">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label" for="Login">Логин</label>
                        <input class="form-control" id="Login" name="Login" value="@Model.Login" autocomplete="username" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="Password">Пароль</label>
                        <input class="form-control" id="Password" name="Password" type="password" autocomplete="current-password" />
                    </div>

                    <button class="btn btn-primary w-100" type="submit">Войти</button>
                </form>

                <div class="mt-3 text-center">
                    <a href="/Account/RegisterClient">Регистрация клиента</a>
                </div>
            </div>
        </div>
    </div>
</div>
