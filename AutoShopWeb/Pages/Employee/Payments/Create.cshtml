@page
@model AutoShopWeb.Pages.Employee.Payments.CreateModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Employee,Admin")]
@{
    ViewData["Title"] = "Добавить оплату";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Добавить оплату</h2>
    <a class="btn btn-outline-secondary" href="/Employee/Contracts">К договорам</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

@if (Model.ContractInfo != null)
{
    <div class="alert alert-light border">
        <b>Договор:</b> @Model.ContractInfo
    </div>
}

<form method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div class="row g-3">

            <div class="col-md-4">
                <label class="form-label">№ договора</label>
                <input class="form-control" asp-for="ContractNumber" readonly />
            </div>

            <div class="col-md-4">
                <label class="form-label">Дата оплаты</label>
                <input class="form-control" asp-for="PayDate" type="date" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Сумма</label>
                <input class="form-control" asp-for="Amount" type="number" step="0.01" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Статус</label>
                <select class="form-select" asp-for="Status">
                    <option>Ожидает</option>
                    <option>Оплачен</option>
                    <option>Отменен</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Способ оплаты</label>
                <select class="form-select" asp-for="PaymentMethod">
                    <option>Наличные</option>
                    <option>Карта</option>
                    <option>Перевод</option>
                    <option>Онлайн</option>
                </select>
            </div>

            <div class="col-12">
                <button class="btn btn-primary w-100" type="submit">Сохранить оплату</button>
            </div>

        </div>
    </div>
</form>
