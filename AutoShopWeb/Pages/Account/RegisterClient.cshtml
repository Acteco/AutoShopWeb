@page
@model AutoShopWeb.Pages.Account.RegisterClientModel
@{
    ViewData["Title"] = "Регистрация клиента";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="mb-3">Регистрация клиента</h3>

                @if (!string.IsNullOrWhiteSpace(Model.Error))
                {
                    <div class="alert alert-danger">@Model.Error</div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Success))
                {
                    <div class="alert alert-success">@Model.Success</div>
                }

                <form method="post">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Фамилия</label>
                            <input class="form-control" name="LastName" value="@Model.LastName" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Имя</label>
                            <input class="form-control" name="FirstName" value="@Model.FirstName" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Отчество</label>
                            <input class="form-control" name="MiddleName" value="@Model.MiddleName" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Серия паспорта</label>
                            <input class="form-control" name="PassportSeries" value="@Model.PassportSeries" placeholder="1234" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Номер паспорта</label>
                            <input class="form-control" name="PassportNumber" value="@Model.PassportNumber" placeholder="123456" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Дата рождения</label>
                            <input class="form-control" name="BirthDate" type="date" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Дата выдачи</label>
                            <input class="form-control" name="PassportIssueDate" type="date" value="@Model.PassportIssueDate.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Телефон</label>
                            <input class="form-control" name="Phone" value="@Model.Phone" placeholder="+7 900 000-00-00" />
                            <div class="form-text">Формат строго как в БД.</div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Email</label>
                            <input class="form-control" name="Email" value="@Model.Email" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Адрес</label>
                            <input class="form-control" name="Address" value="@Model.Address" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Логин</label>
                            <input class="form-control" name="Login" value="@Model.Login" autocomplete="username" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Пароль</label>
                            <input class="form-control" name="Password" type="password" autocomplete="new-password" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Повтор</label>
                            <input class="form-control" name="Password2" type="password" autocomplete="new-password" />
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary w-100" type="submit">Зарегистрироваться</button>
                        </div>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a href="/Account/Login">Назад ко входу</a>
                </div>
            </div>
        </div>
    </div>
</div>
