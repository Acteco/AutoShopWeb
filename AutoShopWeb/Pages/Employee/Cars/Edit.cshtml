@page
@model AutoShopWeb.Pages.Employee.Cars.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Employee,Admin")]
@{
    ViewData["Title"] = "Редактировать авто";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Редактировать авто</h2>
    <a class="btn btn-outline-secondary" href="/Employee/Cars">К списку</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (Model.Car == null)
{
    <div class="alert alert-warning">Автомобиль не найден.</div>
}
else
{
    <form method="post" class="card shadow-sm">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Модель</label>
                    <input class="form-control" asp-for="ModelName" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Год</label>
                    <input class="form-control" asp-for="ReleaseYear" type="number" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Пробег</label>
                    <input class="form-control" asp-for="Mileage" type="number" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Цена</label>
                    <input class="form-control" asp-for="Price" type="number" step="0.01" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Статус</label>
                    <select class="form-select" asp-for="Status">
                        <option>В наличии</option>
                        <option>Продан</option>
                        <option>Зарезервирован</option>
                        <option>На сервисе</option>
                    </select>
                </div>

                <div class="col-12">
                    <button class="btn btn-primary w-100" type="submit">Сохранить</button>
                </div>
            </div>
        </div>
    </form>
}
